{
    "manifest_version": 3,
    "name": "Summify",
    "version": "1.0",
    "description": "A Chrome extension that allows you summarize any website that you're browsing, saving you lots of time to read the entire website.",
    "permissions": ["activeTab", "scripting"],
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },

    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
      },
      "default_title": "Summify"
    },
    "background": {
      "service_worker": "assets/background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["assets/content.js"]
      }
    ]
  }